@model CodeAlong_Template.Models.Fever

@{
    ViewData["Title"] = "Fever";
}

<h1>Create</h1>

<h4>Fever</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CheckFever" class="control-label"></label>
                <input asp-for="CheckFever" class="form-control" />
                <span asp-validation-for="CheckFever" class="text-danger"></span>
            </div>
            <div class="form-group">

                <span asp-validation-for="Unit" class="text-danger"></span>
                <input type="radio" asp-for="Unit" value="Fahrenheit" />Fahrenheit  <br /> <br />
                <input type="radio" asp-for="Unit" value="Celsius" />Celsius 
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ishypothermia" /> @Html.DisplayNameFor(model => model.Ishypothermia)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
